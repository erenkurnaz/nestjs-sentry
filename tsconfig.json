{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./lib",
        "skipLibCheck": true,
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}